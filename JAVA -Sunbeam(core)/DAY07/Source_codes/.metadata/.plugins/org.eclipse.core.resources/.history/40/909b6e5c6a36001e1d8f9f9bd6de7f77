enum Color
{
	RED,GREEN,BLUE; // 0  ,  1   , 2 
}
public class Day7_1 {

	public static void main(String[] args) 
	{
		Color clr = Color.RED;
		System.out.println("ordinal for red = "+clr.ordinal());
		
		clr = Color.GREEN;
		System.out.println("ordinal for green = "+clr.ordinal());
		
		clr = Color.BLUE;
		System.out.println("ordinal for blue = "+clr.ordinal());
				

	}

}
