


public class Day2_3 {

	public static void main(String[] args) 
	{
		int a=15;
		System.out.println("A = "+a);
		a++;
		System.out.println("A = "+a);
		a+=5; //short hand operator // a = a+5 
		System.out.println("A = "+a);
	}
}




