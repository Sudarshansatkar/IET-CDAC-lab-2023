
public class Day2_3 {

	public static void main(String[] args) 
	{
		int a = 50,b=40;
		System.out.println("Addition = "+a+b); // 5040
		System.out.println("Addition = "+(a+b));
	}
	
}


/*
//shift operation
// x << n = x * 2^n  
// 5 << 2 = 5 * 2^2 = 5 * 4 = 20

// x >> n = x / 2^n
// 5 >> 2 = 5 / 2^2 = 5 / 4 = 1

public class Day2_3 {

	public static void main(String[] args) 
	{
		int a =5;
		System.out.println("A << 2 =  "+(a<<2));
		System.out.println("A >> 2 = "+(a>>2));
		
	}
}
*/



